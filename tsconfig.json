{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@/p5/*": ["comps/P5/*"],
      "@/comps/*": ["comps/*"],
      "@/views/*": ["app/views/*"],
      "@/css/*": ["css/*"],
      "@/api/*": ["app/api/*"],
      "@/hooks/*": ["hooks"],
      "@/mongo/*": ["mongo/*"],
      "@/styles/*": ["styles/*"]
    },
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [{"name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/**/*.ts",
    "**/**/*.tsx",
    ".next/types/**/*.ts", "app/[user]/collections/Collections.tsx", "app/[user]/sketches/[path]/Refactor.tsx",
  ],
  "exclude": [
    "node_modules",
    "app/mdx/*"
  ]
}
